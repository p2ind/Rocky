@model IEnumerable<Rocky.Models.ApplicationType>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus"></i>&nbsp; Create New Application Type
            </a>
        </div>
    </div>
    <br/><br/>

    @if(Model.Count() >0)
    {
       <table class="table table-bordered table-striped" style="width:100%;">
           <thead>
               <tr>
                   <th>Name</th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
               @foreach (var obj in Model)
               {
               <tr>
                   <td width="70%">@obj.Name</td>
                   <td>
                       <div class="w-75 btn-group" role="group">
                           <a asp-controller="ApplicationType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                           <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                       </div>
                   </td>
               </tr>
               }
           </tbody>
       </table>
    }else
    {
        <p>No application type Exists.</p>
    }
</div>